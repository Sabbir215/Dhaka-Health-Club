rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - authenticated users can read all profiles, but only write their own
    match /users/{userId} {
      allow read: if request.auth != null;  // Any authenticated user can read all user profiles
      allow write: if request.auth != null && request.auth.uid == userId;  // Only modify your own profile
    }
    
    // Dashboard stats - anyone authenticated can read
    match /dashboard/{document=**} {
      allow read: if request.auth != null;
      allow write: if false;  // Only admins/server can write (via Admin SDK)
    }
    
    // Tasks collection - authenticated users can read all, write their own
    match /tasks/{taskId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
  }
}